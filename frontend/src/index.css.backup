.error-state {
  text-align: center;
  padding: 3rem;
  color: rgba(255, 255, 255, 0.6);
}

.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(131, 110, 249, 0.05);
  border-radius: 1rem;
  border: 1px dashed rgba(131, 110, 249, 0.3);
