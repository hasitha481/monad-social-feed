  border: none;
  padding: 1rem 2rem;
  border-radius: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 25px rgba(131, 110, 249, 0.3);
  position: relative;
  overflow: hidden;
  font-size: 1rem;
}

.save-profile-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
