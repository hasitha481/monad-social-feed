/* MonadSocial - Optimized CSS with Beautiful Styling */

/* ===== BASE STYLES ===== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  background: linear-gradient(135deg, #200052 0%, #1a0040 50%, #0f001f 100%);
  color: white;
  min-height: 100vh;
  overflow-x: hidden;
}

.app {
  min-height: 100vh;
  position: relative;
}

/* ===== MONAD LOGO & BRANDING ===== */
.monad-logo-container {
  display: inline-block;
  animation: monadGlow 3s ease-in-out infinite alternate;
}

.monad-logo-svg {
  filter: drop-shadow(0 0 15px rgba(131, 110, 249, 0.6));
  transition: all 0.3s ease;
}

.monad-logo-svg:hover {
  filter: drop-shadow(0 0 25px rgba(131, 110, 249, 0.9));
  transform: scale(1.1);
}

@keyframes monadGlow {
  0% { filter: drop-shadow(0 0 15px rgba(131, 110, 249, 0.6)); }
  100% { filter: drop-shadow(0 0 20px rgba(255, 107, 107, 0.6)); }
}

.monad-logo-official {
  margin-bottom: 2rem;
  animation: monadPulse 2s ease-in-out infinite alternate;
}

@keyframes monadPulse {
  0% { transform: scale(1); }
  100% { transform: scale(1.05); }
}

.monad-features {
  display: flex;
  gap: 1rem;
  margin: 1.5rem 0;
  flex-wrap: wrap;
  justify-content: center;
}

.feature-badge {
  background: rgba(131, 110, 249, 0.2);
  border: 1px solid #836EF9;
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-size: 0.85rem;
  font-weight: 500;
  color: white;
  transition: all 0.3s ease;
  cursor: default;
  backdrop-filter: blur(10px);
}

.feature-badge:hover {
  background: rgba(131, 110, 249, 0.4);
  border-color: #FF6B6B;
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 25px rgba(131, 110, 249, 0.3);
}

/* ===== HEADER STYLES ===== */
.header {
  background: rgba(131, 110, 249, 0.1);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(131, 110, 249, 0.2);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header.scrollable {
  position: relative;
  top: auto;
  background: rgba(32, 0, 82, 0.95);
  margin-bottom: 0;
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.app-title {
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #836EF9, #FF6B6B);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
}

.nav-buttons {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.nav-btn {
  background: rgba(131, 110, 249, 0.2);
  border: 1px solid rgba(131, 110, 249, 0.3);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 2rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
}

.nav-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.nav-btn:hover::before {
  left: 100%;
}

.nav-btn:hover {
  background: rgba(131, 110, 249, 0.4);
  border-color: #836EF9;
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 10px 30px rgba(131, 110, 249, 0.4);
}

.nav-btn.active {
  background: linear-gradient(135deg, #836EF9, #FF6B6B);
  border-color: transparent;
  box-shadow: 0 8px 25px rgba(131, 110, 249, 0.5);
  transform: translateY(-1px);
}

.nav-btn.active:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 15px 40px rgba(131, 110, 249, 0.6);
}

/* ===== WALLET SECTION ===== */
.wallet-section {
  display: flex;
  align-items: center;
  gap: 16px;
}

.wallet-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-badge {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(131, 110, 249, 0.2);
  padding: 6px 16px;
  border-radius: 25px;
  border: 1px solid rgba(131, 110, 249, 0.3);
}

.network-indicator {
  font-size: 0.9rem;
}

.username {
  font-weight: 600;
  color: #ffffff;
  font-size: 0.95rem;
}

.logout-btn-new {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
  border: none;
  padding: 8px 18px;
  border-radius: 25px;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
}

.logout-btn-new:hover {
  background: linear-gradient(135deg, #ff5252, #e53935);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
}

/* ===== LOGIN SCREEN ===== */
.login-screen {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  background: linear-gradient(135deg, #200052 0%, #1a0040 50%, #0f001f 100%);
  position: relative;
  overflow: hidden;
}

.login-screen::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(131, 110, 249, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.login-hero {
  text-align: center;
  max-width: 600px;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(131, 110, 249, 0.2);
  border-radius: 2rem;
  padding: 3rem;
  position: relative;
  z-index: 2;
  box-shadow: 0 20px 60px rgba(131, 110, 249, 0.2);
}

.login-title {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, #836EF9, #FF6B6B);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
  animation: titleGlow 3s ease-in-out infinite alternate;
}

@keyframes titleGlow {
  0% { filter: drop-shadow(0 0 10px rgba(131, 110, 249, 0.3)); }
  100% { filter: drop-shadow(0 0 20px rgba(255, 107, 107, 0.3)); }
}

.login-subtitle {
  font-size: 1.2rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 2rem;
}

.connect-btn-large {
  background: linear-gradient(135deg, #836EF9, #FF6B6B);
  color: white;
  border: none;
  padding: 1.25rem 2.5rem;
  border-radius: 3rem;
  font-size: 1.2rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 30px rgba(131, 110, 249, 0.4);
  position: relative;
  overflow: hidden;
}

.connect-btn-large::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.connect-btn-large:hover::before {
  left: 100%;
}

.connect-btn-large:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 15px 50px rgba(131, 110, 249, 0.6);
  filter: brightness(1.1);
}

.connect-btn-large:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.login-footer {
  margin-top: 2rem;
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.9rem;
}

/* ===== NETWORK WARNING ===== */
.network-warning {
  background: rgba(255, 69, 58, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 69, 58, 0.3);
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 1rem;
}

.warning-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.warning-icon {
  font-size: 1.5rem;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.switch-btn, .switch-network-btn {
  background: rgba(255, 69, 58, 0.2);
  border: 1px solid #FF453A;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
}

.switch-btn:hover, .switch-network-btn:hover {
  background: rgba(255, 69, 58, 0.4);
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 25px rgba(255, 69, 58, 0.3);
}

/* ===== MAIN CONTENT ===== */
.main-content {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

/* ===== CARDS & COMPONENTS ===== */
.stats-card, .feed-card, .profile-card, .rich-text-post-creator {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(131, 110, 249, 0.2);
  border-radius: 1.5rem;
  padding: 2rem;
  box-shadow: 0 8px 32px rgba(131, 110, 249, 0.1);
  transition: all 0.3s ease;
}

.stats-card:hover, .feed-card:hover, .profile-card:hover {
  border-color: rgba(131, 110, 249, 0.4);
  box-shadow: 0 12px 48px rgba(131, 110, 249, 0.15);
  transform: translateY(-2px);
}

.stats-card h3, .feed-card h3, .profile-card h3 {
  color: #836EF9;
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
  font-weight: 700;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 0;
  border-bottom: 1px solid rgba(131, 110, 249, 0.1);
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.stat-value {
  color: #836EF9;
  font-weight: 700;
  font-size: 1.1rem;
}

/* ===== RICH TEXT EDITOR ===== */
.rich-text-post-creator {
  background: rgba(131, 110, 249, 0.1);
  border: 1px solid rgba(131, 110, 249, 0.3);
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 24px;
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
}

.rich-text-post-creator::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(131, 110, 249, 0.1), transparent);
  transition: left 1s;
}

.rich-text-post-creator:hover::before {
  left: 100%;
}

.post-creator-title {
  margin-bottom: 20px !important;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(131, 110, 249, 0.2);
  font-size: 1.4rem;
  color: #ffffff;
  font-weight: 600;
}

.form-warning {
  background: rgba(255, 107, 107, 0.15);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 12px 16px;
  border-radius: 8px;
  margin-bottom: 16px;
  font-weight: 500;
  text-align: center;
}

.formatting-toolbar {
  margin: 16px 0;
  padding: 12px;
  background: rgba(32, 0, 82, 0.5);
  border-radius: 12px;
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  align-items: center;
  border: 1px solid rgba(131, 110, 249, 0.2);
}

.format-group {
  display: flex;
  gap: 0.5rem;
}

.format-btn {
  background: rgba(131, 110, 249, 0.2);
  border: 1px solid rgba(131, 110, 249, 0.3);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 600;
  position: relative;
  overflow: hidden;
}

.format-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.4s;
}

.format-btn:hover::before {
  left: 100%;
}

.format-btn:hover {
  background: rgba(131, 110, 249, 0.5);
  border-color: #836EF9;
  transform: translateY(-3px) scale(1.1);
  box-shadow: 0 8px 25px rgba(131, 110, 249, 0.4);
}

.emoji-btn {
  font-size: 1.2rem;
}

/* ===== EMOJI PICKER ===== */
.emoji-picker {
  background: rgba(131, 110, 249, 0.1);
  border: 1px solid rgba(131, 110, 249, 0.2);
  border-radius: 1rem;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  max-height: 350px;
  overflow-y: auto;
  backdrop-filter: blur(10px);
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

.emoji-section h4 {
  color: #836EF9;
  margin: 0 0 1rem 0;
  font-size: 1rem;
  font-weight: 600;
}

.emoji-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(45px, 1fr));
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.emoji-item {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(131, 110, 249, 0.2);
  color: white;
  padding: 0.75rem;
  border-radius: 0.5rem;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.emoji-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(131, 110, 249, 0.2), rgba(255, 107, 107, 0.2));
  opacity: 0;
  transition: opacity 0.3s;
}

.emoji-item:hover::before {
  opacity: 1;
}

.emoji-item:hover {
  border-color: #836EF9;
  transform: translateY(-3px) scale(1.2) rotate(5deg);
  box-shadow: 0 10px 30px rgba(131, 110, 249, 0.4);
  z-index: 10;
}

.special-char {
  font-family: 'JetBrains Mono', 'Fira Code', monospace;
  font-weight: bold;
}

/* ===== TEXT AREA ===== */
.rich-textarea-container {
  position: relative;
  margin: 16px 0;
}

.rich-post-textarea {
  width: 100%;
  min-height: 200px;
  padding: 1.5rem;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(131, 110, 249, 0.2);
  border-radius: 1rem;
  color: white;
  font-size: 1rem;
  line-height: 1.6;
  resize: vertical;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.rich-post-textarea:focus {
  outline: none;
  border-color: #836EF9;
  box-shadow: 0 0 0 4px rgba(131, 110, 249, 0.2);
  background: rgba(255, 255, 255, 0.08);
}

.character-counter {
  position: absolute;
  bottom: 1rem;
  right: 1.5rem;
  font-size: 0.8rem;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(32, 0, 82, 0.9);
  padding: 0.5rem 1rem;
  border-radius: 1rem;
  border: 1px solid rgba(131, 110, 249, 0.3);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.character-counter.warning {
  color: #FFCE54;
  border-color: #FFCE54;
  animation: counterWarning 1s infinite alternate;
}

@keyframes counterWarning {
  0% { transform: scale(1); }
  100% { transform: scale(1.05); }
}

.character-counter.danger {
  color: #FF6B6B;
  border-color: #FF6B6B;
  animation: counterDanger 0.5s infinite alternate;
}

@keyframes counterDanger {
  0% { transform: scale(1) rotate(-1deg); }
  100% { transform: scale(1.1) rotate(1deg); }
}

/* ===== PHOTO UPLOAD ===== */
.photo-upload-section {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin: 16px 0 20px 0;
  flex-wrap: wrap;
}

.photo-input {
  display: none;
}

.photo-upload-btn {
  background: rgba(131, 110, 249, 0.2);
  border: 1px solid #836EF9;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 1rem;
  cursor: pointer;
  font-size: 0.9rem;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.photo-upload-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.4s;
}

.photo-upload-btn:hover::before {
  left: 100%;
}

.photo-upload-btn:hover {
  background: rgba(131, 110, 249, 0.4);
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 10px 30px rgba(131, 110, 249, 0.4);
}

.photo-preview {
  position: relative;
  display: inline-block;
}

.preview-image {
  max-width: 150px;
  max-height: 150px;
  border-radius: 1rem;
  border: 2px solid #836EF9;
  box-shadow: 0 8px 25px rgba(131, 110, 249, 0.3);
}

.remove-photo-btn {
  position: absolute;
  top: -10px;
  right: -10px;
  background: #FF6B6B;
  color: white;
  border: none;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
}

.remove-photo-btn:hover {
  transform: scale(1.2) rotate(90deg);
  box-shadow: 0 6px 20px rgba(255, 107, 107, 0.6);
}

/* ===== POST FORM FOOTER ===== */
.post-form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16px;
  border-top: 1px solid rgba(131, 110, 249, 0.2);
  margin-top: 20px;
  flex-wrap: wrap;
  gap: 1rem;
}

.fee-info {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(131, 110, 249, 0.1);
  padding: 0.75rem 1.5rem;
  border-radius: 2rem;
  border: 1px solid rgba(131, 110, 249, 0.2);
  backdrop-filter: blur(10px);
  font-weight: 500;
}

.rich-post-btn {
  background: linear-gradient(135deg, #836EF9, #FF6B6B);
  color: white;
  border: none;
  padding: 1rem 2.5rem;
  border-radius: 2rem;
  font-weight: 700;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 30px rgba(131, 110, 249, 0.4);
  position: relative;
  overflow: hidden;
}

.rich-post-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.rich-post-btn:hover::before {
  left: 100%;
}

.rich-post-btn:hover:not(:disabled) {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 15px 50px rgba(131, 110, 249, 0.6);
  filter: brightness(1.1);
}

.rich-post-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

/* ===== STATUS MESSAGES ===== */
.status-message {
  margin-top: 1rem;
  padding: 1rem;
  border-radius: 1rem;
  font-weight: 600;
  text-align: center;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.status-message.success {
  background: rgba(52, 211, 153, 0.1);
  border: 1px solid rgba(52, 211, 153, 0.3);
  color: #34D399;
}

.status-message.error {
  background: rgba(248, 113, 113, 0.1);
  border: 1px solid rgba(248, 113, 113, 0.3);
  color: #F87171;
}

/* ===== POSTS & FEED ===== */
.feed-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.refresh-btn, .retry-btn {
  background: rgba(131, 110, 249, 0.2);
  border: 1px solid #836EF9;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 1rem;
  cursor: pointer;
