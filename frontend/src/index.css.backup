}

.delete-item:hover {
  background: rgba(255, 107, 107, 0.2);
  color: #ff6b6b;
}

.save-item:hover {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
}

/* ===== POST EDITING ===== */
.edit-post-container {
  margin: 16px 0;
  padding: 16px;
  background: rgba(131, 110, 249, 0.1);
  border: 1px solid rgba(131, 110, 249, 0.3);
