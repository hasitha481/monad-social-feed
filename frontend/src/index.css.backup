  padding: 4px 8px;
  border-radius: 50%;
  transition: all 0.3s ease;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-menu-btn:hover {
  background: rgba(131, 110, 249, 0.2);
  color: #836EF9;
}

.post-menu-dropdown {
  position: absolute;
  top: 100%;
  right: 0;
  background: rgba(32, 0, 82, 0.95);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(131, 110, 249, 0.3);
