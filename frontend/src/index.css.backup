  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.save-edit-btn:hover {
  background: linear-gradient(135deg, #2d8f47, #1e7e34);
  transform: translateY(-1px);
}

.cancel-edit-btn {
  background: rgba(255, 107, 107, 0.8);
