/* ===== ENHANCED 3-DOT MENU VISIBILITY ===== */
/* Add this CSS to your index.css file */

/* Enhanced post menu button - more visible */
.post-menu-btn-enhanced {
  background: rgba(131, 110, 249, 0.3);
  border: 2px solid rgba(131, 110, 249, 0.5);
  color: #ffffff;
  font-size: 1.4rem;
  font-weight: bold;
  cursor: pointer;
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(131, 110, 249, 0.3);
  backdrop-filter: blur(10px);
  position: relative;
  z-index: 10;
}

.post-menu-btn-enhanced:hover {
  background: rgba(131, 110, 249, 0.6);
  border-color: #836EF9;
  color: #ffffff;
  transform: scale(1.1);
  box-shadow: 0 4px 16px rgba(131, 110, 249, 0.5);
}

/* Enhanced dropdown menu - better visibility and positioning */
.post-menu-dropdown-enhanced {
  position: absolute;
  top: 100%;
  right: 0;
  background: rgba(32, 0, 82, 0.98);
  backdrop-filter: blur(20px);
  border: 2px solid rgba(131, 110, 249, 0.5);
  border-radius: 12px;
  padding: 8px 0;
  min-width: 180px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: menuAppear 0.2s ease-out;
  margin-top: 4px;
}

@keyframes menuAppear {
  0% {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Enhanced menu items - clearer and more visible */
.menu-item-enhanced {
  width: 100%;
  padding: 12px 16px;
  background: transparent;
  border: none;
  color: #ffffff;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: left;
  display: flex;
  align-items: center;
  gap: 12px;
  border-bottom: 1px solid rgba(131, 110, 249, 0.1);
}

.menu-item-enhanced:last-child {
  border-bottom: none;
}

.menu-item-enhanced:hover {
  background: rgba(131, 110, 249, 0.3);
  transform: translateX(4px);
}

.menu-item-enhanced.edit-item:hover {
  background: rgba(52, 168, 83, 0.3);
  color: #34a853;
}

.menu-item-enhanced.delete-item:hover {
  background: rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
}

.menu-item-enhanced.save-item:hover {
  background: rgba(255, 193, 7, 0.3);
  color: #ffc107;
}

.menu-icon {
  font-size: 1.1rem;
  width: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  flex: 1;
  font-weight: 600;
}

/* Container positioning fix */
.post-menu-container {
  position: relative;
  z-index: 10;
}

/* Ensure menu appears above other content */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
  position: relative;
}

.post-header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
  position: relative;
  z-index: 5;
}

.post-author-section {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-grow: 1;
  min-width: 0; /* Prevent overflow */
}

/* Enhanced notification/status message */
.status-message {
  position: fixed;
  top: 20px;
  right: 20px;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  z-index: 9999;
  animation: slideInRight 0.3s ease-out;
  max-width: 300px;
  word-wrap: break-word;
}

@keyframes slideInRight {
  from { 
    opacity: 0; 
    transform: translateX(100px); 
  }
  to { 
    opacity: 1; 
    transform: translateX(0); 
  }
}

.status-message.success {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.9), rgba(16, 185, 129, 0.9));
  border: 2px solid #34D399;
  color: white;
  box-shadow: 0 4px 20px rgba(52, 211, 153, 0.3);
}

.status-message.error {
  background: linear-gradient(135deg, rgba(248, 113, 113, 0.9), rgba(239, 68, 68, 0.9));
  border: 2px solid #F87171;
  color: white;
  box-shadow: 0 4px 20px rgba(248, 113, 113, 0.3);
}

