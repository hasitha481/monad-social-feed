}

/* ===== UTILITY CLASSES ===== */
.text-red-400 {
  color: #ff6b6b !important;
}

.opacity-50 {
  opacity: 0.5;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* ===== ACCESSIBILITY ===== */
button:focus-visible,
input:focus-visible,
textarea:focus-visible {
  outline: 2px solid #836EF9;
  outline-offset: 2px;
}

.post-menu-btn:focus,
.menu-item:focus,
.logout-btn-new:focus,
.save-edit-btn:focus,
.cancel-edit-btn:focus,
.delete-poll-btn:focus,
.unsave-btn:focus,
.vote-option-btn:focus,
.comment-profile-photo:focus,
.add-option-btn:focus {
  outline: 2px solid #836EF9;
  outline-offset: 2px;
}

/* ===== ANIMATIONS ===== */
